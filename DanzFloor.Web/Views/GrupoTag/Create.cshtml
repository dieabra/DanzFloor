@model DanzFloor.Web.Models.ViewModels.GrupoTagViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card z-depth-4">
    <div class="card-header">
        <h2>
            @(Model.EsCaracteristica ? "Nueva Categoría" : "Nuevo Grupo de Tags")
        </h2>
    </div>

    <div class="card-body card-padding">
        @using (Html.BeginForm("Create", "GrupoTag", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(m => m.EsCaracteristica)

            <div class="row">

                <div class="col-md-6 form-group fg-float m-t-25 m-b-0">
                    <div class="fg-line">
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control input-sm" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        <label class="fg-label">Nombre</label>
                    </div>
                </div>
                <div class="col-sm-6 m-b-20">
                    <label>Tags</label>
                    <div class="form-group fg-line">
                        <select class="chosen" id="TagsId" multiple="multiple" name="TagsId" style="display: none;">
                            @foreach (var item in Model.Tags)
                            {
                                if (Model.TagsId != null && Model.TagsId.Contains(item.Id))
                                {
                                    <option value="@item.Id" selected="selected">@item.Nombre</option>
                                }
                                else
                                {
                                    <option value="@item.Id">@item.Nombre</option>
                                }
                            }
                        </select>
                    </div>
                    @Html.ValidationMessageFor(model => model.TagsId, "", new { @class = "text-danger" })
                </div>

                <div class="col-sm-12 m-b-20">
                    <div class="toggle-switch toggle-switch-demo" data-ts-color="blue">
                        <label for="VisibleFront" class="ts-label">Visible en frontend</label>
                        <input @(Model.VisibleFront ? "checked='checked'" : "") data-val="true"
                               data-val-required="The Es administrador field is required."
                               id="VisibleFront" name="VisibleFront" type="checkbox" value="true" hidden="hidden" chk-alerta>
                        <label for="VisibleFront" class="ts-helper"></label>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-float bgm-blue m-btn waves-effect waves-circle waves-float"><i class="zmdi zmdi-check"></i></button>
        }
    </div>
    <br />
</div>

<div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
