@model DanzFloor.Web.Models.ViewModels.PaginadoViewModel
@{ 
    var contador = 0;
}

@Html.HiddenFor(m => m.Pagina)

<div class="o-hidden margintop30 hidden-xs">
    <p class="pull-left general-title margintop10">PAGINA @Model.Pagina DE @Model.TotalPaginas</p>
    <div class="pagination-general">
        <ul class="pagination margintop0 general-title">
            <li class="@Html.Raw(Model.Pagina == 1 ? "disabled" : "")"><a data-page="first" btn-buscar="1" class="button"><i class="zmdi zmdi-more-horiz"></i></a></li>
            <li class="@Html.Raw(Model.Pagina == 1 ? "disabled" : "")">
                <a href="#" data-page="prev" btn-buscar="anterior" aria-label="Anterior"></a>
            </li>
            @for (var i = 1; i <= Model.TotalPaginas; i++)
            {

                if (i > (Model.Pagina - 5))
                {
                    contador++;
                    <li class="@(Model.Pagina == i ? "active": "")"><a btn-buscar="@i">@i</a></li>
                }

                if (contador >= 10)
                {
                    break;
                }
            }
            <li class="@Html.Raw(Model.Pagina == Model.TotalPaginas ? "disabled": "")">
                <a data-page="next" btn-buscar="siguiente" aria-label="Siguiente">
                </a>
            </li>
            <li class="@Html.Raw(Model.Pagina == Model.TotalPaginas ? "disabled": "")"><a data-page="last" btn-buscar="@Model.TotalPaginas" class="button"></a></li>
        </ul>
    </div>
</div>

<script src="~/Scripts/PaginadorController.js"></script>