<body>
    <!-- Javascript Libraries -->

    <script src="~/assets/MaterialDesign/vendors/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="~/assets/MaterialDesign/vendors/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

    <!-- Complementos -->

    <script src="~/assets/MaterialDesign/vendors/bootgrid/jquery.bootgrid.updated.min.js"></script>
    <script src="~/assets/MaterialDesign/vendors/bower_components/chosen/chosen.jquery.js"></script>
    <script src="~/assets/MaterialDesign/vendors/bower_components/moment/min/moment.min.js"></script>
    <script src="~/assets/MaterialDesign/vendors/bower_components/flot/jquery.flot.js"></script>
    <script src="~/assets/MaterialDesign/vendors/bower_components/flot/jquery.flot.resize.js"></script>
