    <script src="~/assets/MaterialDesign/vendors/bower_components/fullcalendar/dist/fullcalendar.min.js "></script>
    <script src="~/assets/MaterialDesign/vendors/bower_components/simpleWeather/jquery.simpleWeather.min.js"></script>
    <script src="~/assets/MaterialDesign/vendors/bower_components/Waves/dist/waves.min.js"></script>
    <script src="~/assets/MaterialDesign/vendors/bootstrap-growl/bootstrap-growl.min.js"></script>
    <script src="~/assets/MaterialDesign/vendors/bower_components/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/assets/MaterialDesign/vendors/bower_components/autosize/dist/autosize.min.js"></script>



    <script src="~/assets/MaterialDesign/vendors/farbtastic/farbtastic.min.js"></script>
    <script src="~/assets/MaterialDesign/vendors/bower_components/eonasdan-bootstrap-datetimepicker/src/js/bootstrap-datetimepicker.js"></script>
    <script src="~/assets/MaterialDesign/vendors/fileinput/fileinput.min.js"></script>
    <script src="~/assets/MaterialDesign/vendors/bower_components/table-export/dist/js/xlsx.core.js"></script>
    <script src="~/assets/MaterialDesign/vendors/bower_components/table-export/dist/js/FileSaver.js"></script>
    <script src="~/assets/MaterialDesign/vendors/bower_components/table-export/dist/js/tableexport.min.js"></script>
    <script src="~/assets/MaterialDesign/vendors/bower_components/bootstrap-select/dist/js/bootstrap-select.js"></script>
    <script>
            TableExport.prototype.xls.buttonContent = "Exportar a Excel (viejo)";
            TableExport.prototype.xlsx.buttonContent = "Exportar a Excel (nuevo)";
            TableExport.prototype.csv.buttonContent = "Exportar a CSV";
    </script>
    <script src="~/assets/jscroll-master/jquery.jscroll.js"></script>
    <script src="~/assets/MaterialDesign/js/app.js"></script>
    <script src="~/assets/MaterialDesign/js/custom.js"></script>

    <script type="text/javascript">
        var core = '@System.Configuration.ConfigurationManager.AppSettings["Core"]';
    </script>

    <script src="~/Scripts/CallerService.js"></script>
    @Scripts.Render("~/bundles/dropzonescripts")

    <!-- Placeholder for IE9 -->
    <!--[if IE 9 ]>
        <script src="~/assets/MaterialDesign/vendors/bower_components/jquery-placeholder/jquery.placeholder.min.js"></script>
    <![endif]-->
    @RenderSection("scripts", false)

    <!-- End Google Tag Manager -->

    <header id="header" class="clearfix" data-ma-theme="blue">
        <ul class="h-inner">
            <li class="hi-trigger ma-trigger" data-ma-action="sidebar-open" data-ma-target="#sidebar">
                <div class="line-wrap">
                    <div class="line top"></div>
                    <div class="line center"></div>
                    <div class="line bottom"></div>
                </div>
            </li>

            <li class="hidden-xs">
                <a href="/" >
                    <img class="img-responsive" src="~/assets/Danzfloor/img/logo-danzfloor-pink.png" />
                    @*<img class="img-responsive" src="~/assets/Danzfloor/img/logo-danzfloor.png" />*@
                </a>
            </li>
        </ul>

        <!-- Top Search Content -->
        <div class="h-search-wrap">
            <div class="hsw-inner">
                <i class="hsw-close zmdi zmdi-arrow-left" data-ma-action="search-close"></i>
                <input type="text">
            </div>
        </div>
    </header>

    <section id="main" style="background-color:#163c6170;">
        <aside id="sidebar" class="sidebar c-overflow">
            <div class="s-profile">
                <a href="" data-ma-action="profile-menu-toggle">
                    <div>
                        @*<img src="~/assets/Danzfloor/img/Headphone.jpg" />*@
                        <img class="" src="~/assets/Danzfloor/img/0001001_Club.png" />
                    </div>

                    <div class="sp-info">
                        @(User.Identity.IsAuthenticated ? User.Identity.Name : "")

                        <i class="zmdi zmdi-caret-down"></i>
                    </div>
                </a>

                <ul class="main-menu">
                    <li>
                        <a href="/Cuenta/ChangePassword"><i class="zmdi zmdi-shield-security"></i> Cambiar Contraseña</a>
                    </li>
                    <li>
                        <a href="/Cuenta/Logoff"><i class="zmdi zmdi-time-restore"></i> Logout</a>
                    </li>
                </ul>
            </div>
            <ul class="main-menu ">
                
                @if (User.IsInRole(RoleConst.Administrador))
                {
                    <li class="sub-menu @((url.Equals("/Tag") || url.Equals("/GrupoTag")) ? "active" : "")">
                        <a href="" data-ma-action="submenu-toggle"><i class="zmdi zmdi-account-add"></i>Tags</a>
                        <ul>
                            <li @(url.Equals("/GrupoTag") ? "class=active" : "")><a href="/GrupoTag?caracteristica=False"><i class="zmdi zmdi-search-in-file"></i> Grupo de Tags</a></li>
                            <li @(url.Equals("/Tag") ? "class=active" : "")><a href="/Tag"><i class="zmdi zmdi-search-in-file"></i> Tags</a></li>
                        </ul>
                    </li>
                }

                @if (User.IsInRole(RoleConst.Administrador))
                {
                   <li @(url.Equals("/Venue") ? "class=active" : "")>
                        <a href="/Venue"><i class="zmdi zmdi-search-in-file"></i> Venues</a>
                   </li>
                }

                @if (User.IsInRole(RoleConst.Administrador))
                {
                    <li @(url.Equals("/Artista") ? "class=active" : "")>
                        <a href="/Artista"><i class="zmdi zmdi-search-in-file"></i> Artistas</a>
                    </li>
                }

                @if (User.IsInRole(RoleConst.Administrador))
                {
                    <li @(url.Equals("/Banda") ? "class=active" : "")>
                        <a href="/Banda"><i class="zmdi zmdi-search-in-file"></i> Bandas</a>
                    </li>
                }

                @if (User.IsInRole(RoleConst.Administrador))
                {
                    <li @(url.Equals("/Tema") ? "class=active" : "")>
                        <a href="/Tema"><i class="zmdi zmdi-search-in-file"></i> Temas</a>
                    </li>
                }
            </ul>

        </aside>

        <section id="content">
            <div class="container">
                @RenderBody()
            </div>
        </section>
    </section>

</body>
