

<div class="modal fade modal-delivery-point" tabindex="-1" role="dialog" id="modal-repetir-pedido">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close general-title" data-dismiss="modal" aria-label="Close">Cerrar <i class="font24 pe-va pe-7s-close-circle"></i></button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="text-center">
                                <h4>Tiene artículos en el carrito ¿que desea hacer?</h4>
                            </div>
                        </div>
                    </div>
                    <div class="row  margintop40">
                        <div class="col-xs-12">
                            <div class="modal-actions">
                                <a sumar-pedido-actual class="btn btn-primary btn-lg">Sumar al carrito</a>
                                <a descartar-pedido-actual class="btn btn-default btn-lg marginleft15">Descartar el carrito</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('[abrir-repetir-pedido]').click(function () {
            var pedidoId = $(this).attr('abrir-repetir-pedido');

            $('[sumar-pedido-actual]').attr('href', '/Pedido/SumarPedidoActual/?pedidoId=' + pedidoId);
            $('[descartar-pedido-actual]').attr('href', '/Pedido/DescartarPedidoActual/?pedidoId=' + pedidoId);

            var cantidadArticulos = $('[articulos-pedido-inicial]').attr('articulos-pedido-inicial');

            if (cantidadArticulos > 0)
                $('#modal-repetir-pedido').modal('show');
            else
                document.location.href = '/Pedido/DescartarPedidoActual/?pedidoId=' + pedidoId;
        });
    });
</script>