<script type="text/javascript">
    $(document).ready(function () {
        $('[buscar-criterio]').keyup(function (e) {
            var q = $(this).val();
            var url = '/Frontend/ResultadoBusqueda?q=' + q;

            if (e.keyCode == 13) {
                location.href = url;
            }

            $('[buscar-articulos]').attr('href', url ) ;
        });

        $('[buscar-criterio-mobile]').keyup(function (e) {
            var q = $(this).val();
            var url = '/Frontend/ResultadoBusqueda?q=' + q;

            if (e.keyCode == 13) {
                location.href = url;
            }

            $('[buscar-articulos-mobile]').attr('href', url);
        });
