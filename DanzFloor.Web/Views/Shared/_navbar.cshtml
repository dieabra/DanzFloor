<script>
    $('.navbar.hidden-xs .buscar-articulos').click(function () {
        $('.search-box').toggleClass('active');
        $('#search-input').focus();
        $('body').toggleClass('active-search');
    })

    $('.navbar.visible-xs .buscar-articulos').click(function () {
        $('.search-box').toggleClass('active');
        $('body').toggleClass('active-search');
    })
</script>

<script>
    $('.dropdown.categorias').click(function () {
        $('.dropdown.categorias a i').toggleClass('rotate');
    })

    $(document).click(function () {
        $('.dropdown.categorias a i').removeClass('rotate');
    });
</script>