@model DanzFloor.Web.Models.Dominio.DiaNoLaborable

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card z-depth-4">
    <div class="card-header">
        <h2>
            Nuevo Día No Laboral
        </h2>
    </div>

    <div class="card-body card-padding">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">


            <div class="card-body card-padding">
                <div class="row">
                    <div class="col-md-6 form-group fg-float m-t-25 m-b-0">
                        <div class="fg-line">
                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control input-sm" } })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                            <label class="fg-label">Nombre</label>
                        </div>
                    </div>

                    <div class="col-md-6 form-group fg-float m-b-0">
                        <label class="nombre-campo">Dia no laborable</label>
                        <div class="fg-line dtp-container">
                            <input type="text" id="FechaNoLaborable" name="FechaNoLaborable" class="form-control date-picker">
                            @Html.ValidationMessageFor(model => model.FechaNoLaborable, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-12 form-group fg-float m-t-25 m-b-0">
                        <div class="fg-line">
                            @Html.TextAreaFor(model => model.Mensaje, new { rows = 5, @class = "form-control" })
                            <label class="fg-label">Mensaje</label>
                        </div>
                        @Html.ValidationMessageFor(model => model.Mensaje, "", new { @class = "text-danger" })
                    </div>
                </div>
                @Html.HiddenFor(m => m.Nombre)
                <button type="submit" class="btn btn-float bgm-blue m-btn waves-effect waves-circle waves-float"><i class="zmdi zmdi-check"></i></button>
            </div>
        </div>
    }

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
