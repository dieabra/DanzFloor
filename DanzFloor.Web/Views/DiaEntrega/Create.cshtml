@model DanzFloor.Web.Models.ViewModels.DiaEntregaViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card z-depth-4">
    <div class="card-header">
        <h2>
            Nuevo Día de Entrega
        </h2>
    </div>

    <div class="card-body card-padding">
        @using (Html.BeginForm("Create", "DiaEntrega", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(m => m.PuntoEntregaId)

            <div class="row">

                <div class="col-md-6 form-group fg-float m-t-25 m-b-0">
                    <div class="fg-line">
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control input-sm" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        <label class="fg-label">Nombre</label>
                    </div>
                </div>
                <div class="col-sm-6 m-b-20">
                    <label> Puntos de Entrega</label>
                    <div class="form-group fg-line">
                        <select class="chosen" id="DiasSemanaSelected" multiple="multiple" name="DiasSemanaSelected" style="display: none;">
                            @foreach (var item in Model.DiasSemana)
                            {
                                <option value="@((int)item)">@item</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-6 m-b-20">
                    <div class="input-group form-group">
                        <span class="input-group-addon"><i class="zmdi zmdi-calendar"></i></span>
                        <div class="dtp-container">
                            <input id="HoraDesdeString" name="HoraDesdeString" type='text' class="form-control time-picker"
                                    placeholder="Desde...">
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 m-b-20">
                    <div class="input-group form-group">
                        <span class="input-group-addon"><i class="zmdi zmdi-calendar"></i></span>
                        <div class="dtp-container">
                            <input id="HoraHastaString" name="HoraHastaString" type='text' class="form-control time-picker"
                                    placeholder="Hasta...">
                        </div>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-float bgm-blue m-btn waves-effect waves-circle waves-float"><i class="zmdi zmdi-check"></i></button>
        }
    </div>
    <br />
</div>

<div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
