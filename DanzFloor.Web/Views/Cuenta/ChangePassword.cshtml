@model DanzFloor.Web.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Cambiar Contraseña";
}

<div class="card z-depth-4">
    <div class="card-header">
        <h2>
            @ViewBag.Title
        </h2>
    </div>
    <div class="card-body card-padding">

        @using (Html.BeginForm("ChangePassword", "Cuenta", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group fg-line">
                @Html.LabelFor(m => m.OldPassword)
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control input-sm" })
            </div>
            <div class="form-group fg-line">
                @Html.LabelFor(m => m.NewPassword)
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control input-sm" })
            </div>
            <div class="form-group fg-line">
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-sm" })
            </div>
            <button type="submit" class="btn btn-primary btn-sm m-t-10">Cambiar contraseña</button>
        }
    </div>
        @section Scripts {

        }
