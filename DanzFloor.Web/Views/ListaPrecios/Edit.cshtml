@model DanzFloor.Web.Models.ViewModels.ListaPreciosViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card z-depth-4">
    <div class="card-header">
        <h2>
            Artículo: @Model.Articulo.Nombre
        </h2>
    </div>

    <div class="card-body card-padding">
        @using (Html.BeginForm("Edit", "ListaPrecios", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="col-md-6 form-group fg-float m-t-25 m-b-0">
                    <label>Artículo</label>
                    <div class="fg-line">
                        <select disabled="disabled" class="chosen" id="ArticuloSelected" name="ArticuloSelected" style="display: none;">
                            @if (Model.ListaArticulos != null)
                            {
                                foreach (var item in Model.ListaArticulos)
                                {
                                    if (Model.Articulo != null && Model.Articulo.Id == item.Id)
                                    {
                                        <option value="@item.Id" selected="selected">@item.Nombre</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Id">@item.Nombre</option>
                                    }
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-6 form-group fg-float m-t-25 m-b-0">
                    <label>Cliente</label>
                    <div class="fg-line">
                        <select disabled="disabled" class="chosen" id="ClienteSelected" name="ClienteSelected" style="display: none;">
                            @if (Model.ListaClientes != null)
                            {
                                foreach (var item in Model.ListaClientes)
                                {
                                    if (Model.Cliente != null && Model.Cliente.Id == item.Id)
                                    {
                                        <option value="@item.Id" selected="selected">@item.Nombre</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Id">@item.Nombre</option>
                                    }
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-12 form-group fg-float m-t-25 m-b-0">
                    <div class="fg-line">
                        @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control input-sm" } })
                        @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
                        @Html.LabelFor(model => model.Precio, new { @class = "fg-label" })
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-float bgm-blue m-btn waves-effect waves-circle waves-float"><i class="zmdi zmdi-check"></i></button>
        }
    </div>

</div>

<div>

</div>

<script type="text/javascript">
    var listaPreciosId = '@(Model.Id)';

    $('#deleteListaPrecios').click(function () {
        swal({
            title: "¿Está seguro de que desea eliminar la lista de precios?",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "Sí",
            cancelButtonText: "No",
            closeOnConfirm: false
        }, function () {
            $.ajax({
                dataType: 'json',
                type: 'GET',
                url: window.location.origin + '/listaPrecios/delete/' + listaPreciosId,
                success: function (result) {
                    swal("¡Eliminado!", "La lista de precios fue eliminada.", "success");
                    window.location.assign(window.location.origin + "/listaPrecios");
                },
                error: function (error) {
                    swal("¡Error!", "La lista de precios no fue eliminado.", "error");
                }
            });
        });
    });
</script>